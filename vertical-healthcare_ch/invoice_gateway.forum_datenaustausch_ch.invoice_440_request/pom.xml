<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.metas.vertical.healthcare_ch</groupId>
		<artifactId>vertical-healthcare_ch</artifactId>
		<version>[1,10.0.0]</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<artifactId>vertical-healthcare_ch.invoice_gateway.forum_datenaustausch_ch.invoice_440.request</artifactId>
	<version>10.0.0</version>
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<!-- source for the response xsd: http://www.forum-datenaustausch.ch/fileadmin/fda_documents/4.5/Rechnungen/XML/XML_Schema_generalInvoiceRequest_450.zip -->
				<!-- NOTE about "<clearOutputDir>false</clearOutputDir>" further down: don't clear the directory because else we will lose previously generated files	-->
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<executions>
					<execution>
						<id>generate-forum-datenaustausch_ch.invoice_440.request</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<args>
								<!-- needed to avoid java class name collisions, since the 3 xsds have some equal names -->
								<arg>-XautoNameResolution</arg>
							</args>
							<schemaDirectory>${project.basedir}/src/main/resources/de/metas/vertical/healthcare_ch/forum_datenaustausch_ch/invoice_440/request</schemaDirectory>
							<generatePackage>de.metas.vertical.healthcare_ch.invoice_gateway.forum_datenaustausch_ch.invoice_440.request</generatePackage>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
