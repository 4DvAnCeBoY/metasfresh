<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>de.metas.parent</artifactId>
		<groupId>de.metas</groupId>
		<version>1.0_IT-SNAPSHOT</version>
	<relativePath>../de.metas.parent/pom.xml</relativePath>
</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>de.metas.printing.esb</groupId>
	<artifactId>de.metas.printing.esb.client-webapp</artifactId>
	<packaging>war</packaging>

	<description>Wraps the printing client jar into a web application (war) to make it available as applet</description>
	
	<!-- value usually equals ${metasfresh-dependency.version}, but for releases they need to differ temporarily -->
	<properties>
		<printing-client.version>${metasfresh-dependency.version}</printing-client.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>de.metas.printing.esb</groupId>
			<artifactId>de.metas.printing.esb.client</artifactId>
			<version>${printing-client.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>de.metas.printing.esb</groupId>
									<artifactId>de.metas.printing.esb.client</artifactId>
									<version>${printing-client.version}</version>
									<classifier>jar-with-dependencies</classifier>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/${project.artifactId}-${metasfresh-dependency.version}</outputDirectory>
									<destFileName>printing-client.jar</destFileName>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>